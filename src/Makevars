PKG_CPPFLAGS=-DNDEBUG
PKG_CFLAGS=-DUSING_R -I. -g -O2 -I/opt/local/include/libxml2 -g -O2 -I/opt/local/include/libxml2 -DPACKAGE_VERSION=\"0.5.5\" \
	-DINTERNAL_ARPACK -DINTERNAL_LAPACK -DINTERNAL_BLAS -DNDEBUG
PKG_CXXFLAGS= -DUSING_R -DNDEBUG
PKG_LIBS=-L/opt/local/lib -lxml2 -lz -lpthread -liconv -lm -lgmp

all: $(SHLIB)

dlamch.o : dlamch.c
	$(CC) $(R_XTRA_FFLAGS) $(PKG_CFLAGS) $(FPICFLAGS) $(SHLIB_CFLAGS) -ffloat-store -c $<
